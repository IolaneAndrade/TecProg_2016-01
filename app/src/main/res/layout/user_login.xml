<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathheals.euvou.controller.remove_user.DisableAccountLoginConfirmation">

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login: "
        android:textSize="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/DarkSlateGray" />

    <EditText
        android:id="@+id/loginField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_toRightOf="@+id/loginLabel"
        android:ems="12"
        android:hint="username"
        android:textColorHint="@color/gray"
        android:maxLines="1"
        android:layout_alignRight="@+id/passwordField"
        android:layout_alignEnd="@+id/passwordField" />

    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha: "
        android:textSize="20dp"
        android:layout_below="@id/loginField"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/DarkSlateGray" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginLabel"
        android:layout_toRightOf="@id/passwordLabel"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="senha"
        android:textColorHint="@color/gray"
        android:maxLines="1" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acessar uma conta"
        android:layout_marginTop="30dp"
        android:background="#00C0C3"
        android:textColor="@color/white"
        android:layout_below="@+id/passwordField"
        android:layout_alignLeft="@+id/signUpButton"
        android:layout_alignStart="@+id/signUpButton"
        android:layout_alignRight="@+id/signUpButton"
        android:layout_alignEnd="@+id/signUpButton" />
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar uma conta"
        android:layout_marginTop="15dp"
        android:background="#00C0C3"
        android:textColor="@color/white"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appIcon"
        android:layout_marginTop="105dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
