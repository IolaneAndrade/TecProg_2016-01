<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathheals.euvou.controller.showPlaceRanking.ShowTop5Rank"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ranking de lugares"
            android:id="@+id/labelRankingPlace"
            android:textAlignment="center"
            android:layout_marginLeft="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/DarkCyan"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:id="@+id/trophyIcon"
            android:src="@drawable/trophy"
            android:layout_gravity="right"
            android:layout_weight="0.16"/>

    </LinearLayout>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:id="@+id/rateEvent"
        tools:context="com.mathheals.euvou.controller.showPlaceRanking.ShowTop5Ranking"
        android:name="com.mathheals.euvou.controller.showPlaceRanking.ShowTop5Ranking"
        tools:layout="@layout/fragment_show_place_rank"
        android:layout_height="172dp">
    </fragment>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="278dp"
        android:layout_height="28dp"
        android:text="@string/visualizarRanking"
        android:id="@+id/more"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_border"
        android:textColor="@color/DarkCyan"/>

    <!-- ___________________________ -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Eventos Recomendados"
            android:id="@+id/labelRecommendationEvent"
            android:textColor="@color/DarkCyan"
            android:layout_marginLeft="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/recommendIcon"
            android:src="@drawable/recommend"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:id="@+id/rateEventRecommendation"
        tools:context="com.mathheals.euvou.controller.event_recommendation.RecommendEvent"
        android:name="com.mathheals.euvou.controller.event_recommendation.RecommendEvent"
        android:layout_height="172dp">
    </fragment>


</LinearLayout>
